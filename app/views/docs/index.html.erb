<h2>
    <div>文章管理</div>
</h2>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="container-fluid panel-title">
      <div class="col-md-2">
    <%= link_to '写文章', new_doc_url %>
      </div>
      <div class="col-md-8">
      </div>
      <div class="col-md-2">
      </div>
    </div>
  </div>
  <ul class="list-group">

    <% @docs.each do |doc| %>
      <li class="list-group-item title">
        <div class="container-fluid ">
          <div class="col-md-8 col-sm-8 col-xs-6">
            <%= link_to doc.title, doc %>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-3">
            <%= link_to '修改', edit_doc_url(doc) %>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-3">
            <%= link_to '删除', doc, method: :post, _method: :delete, data: { confirm: "确定删除文章: '#{doc.title}' 吗？" } %>
          </div>
        </div>
      </li>
    <% end %>



  </ul>
</div>
