<h2>
    <div>用户管理</div>
</h2>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="container-fluid panel-title">
      <div class="col-md-2">
        <%= link_to '添加用户', new_user_path %>
      </div>
      <div class="col-md-8">
      </div>
      <div class="col-md-2">
      </div>
    </div>
  </div>
  <ul class="list-group">

    <% @users.each do |user| %>
      <li class="list-group-item title">
        <div class="container-fluid ">
          <div class="col-md-8 col-sm-8 col-xs-6">
            <%= link_to user.name, edit_user_path(user) %>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-3">
          </div>
          <div class="col-md-2 col-sm-2 col-xs-3">
            <%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </li>
    <% end %>



  </ul>
</div>
